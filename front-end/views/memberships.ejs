<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%- title %></title>
  <%- include('./partials/head.ejs') %>
</head>

<body class="bg-dark-subtle">
  <%- include('./partials/navbar.ejs') %>
  <%- include('./partials/location.ejs', {subtitle: 'Memberships Management', icon: 'bi-person-badge-fill'}) %>

  <div class="p-3 mt-2 container-fluid">
    <%- include('./partials/tableHeader.ejs', {target: null}) %>
    <table class="table table-bordered table-dark table-striped text-center">
      <thead>
        <tr>
          <th>ID</th>
          <th>Membership</th>
          <th>Discount</th>
        </tr>
      </thead>
      <tbody>
        <% if(memberships.length === 0) {%>
          <td colspan="100%">No memberships found</td>
        <% } else { %>
          <% memberships.forEach(membership => { %>
          <tr class="text-center align-content-center w-100 align-baseline"
              data-membership-discount="<%= membership.discount%>">
            <td class="col-1"><%- membership.id %></td>
            <td class="col-1">
              <span class="badge <%= membership.name === 'Bronze' ? 'bg-danger' : membership.name === 'Silver' ? 'bg-secondary' : 'bg-warning' %>"><%- membership.name %><span/>
            </td>
            <td class="col-1"><%- membership.discount %>%</td>
          </tr>
          <% })%>
        <% }%>
      </tbody>
    </table>
  </div>

  <%- include('./partials/alerts/clientAlertMessages.ejs') %>
  <%- include('./partials/bootstrapScripts.ejs') %>
  <script src="/javascripts/alerts.js"></script>
</body>

</html>